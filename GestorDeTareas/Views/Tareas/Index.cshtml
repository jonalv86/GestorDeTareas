@model IEnumerable<GestorDeTareas.Models.Tarea>

<h2>Lista de tareas</h2>

<p>
    @Html.ActionLink("Nueva Tarea", "Alta")
</p>
<table class="table">
    <tr>
        <th>Título</th>
        <th>Descripción</th>
        <th>Fecha de Creación</th>
        <th>Fecha de Vencimiento</th>
        <th>Creado por</th>
        <th>Asignado a</th>
        <th>Prioridad</th>
        <th>Estado</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaAlta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaVencimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaBaja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioAlta.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioAsignado.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prioridad.PrioridadDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.EstadoDesc)
        </td>
        <td>
            @Html.ActionLink("Ver Tarea", "Ver", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
