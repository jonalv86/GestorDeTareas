@using GestorDeTareas.Models
@model GestorDeTareas.ViewModels.TareaViewModel

@{
    ViewBag.Title = "Editar Tarea";
    Usuario usuarioLogueado = (Usuario)Session["user"];
}

<h2>Editar</h2>


<div class="form-horizontal">
    <h4>Tarea</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Titulo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Descripcion)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaAlta, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.FechaAlta)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Vencimiento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (usuarioLogueado.Id == Model.UsuarioAltaId)
            {
                @Html.EditorFor(model => model.Vencimiento, new { htmlAttributes = new { @class = "form-control", Id = "dpVencimiento" } })
                @Html.ValidationMessageFor(model => model.Vencimiento, "", new { @class = "text-danger" })
            }
            else
            {
                @Html.DisplayFor(model => model.Vencimiento.Value.ToString("dd/MM/yyyy") ?? string.Empty)
            }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NombreUsuAlta, "UsuarioAltaId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.NombreUsuAlta)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UsuarioAsignado, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.NombreUsuAsignado)
            <input type="button" value="@(Model.UsuarioAsignado != null ? "Reasignar" : "Asignar")" class="btn btn-primary" id="btnAsignar">
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Prioridad, "PrioridadId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (usuarioLogueado.Id == Model.UsuarioAltaId)
            {
                @Html.DropDownListFor(model => Model.Prioridad, Model.PrioridadesDDL, new { @class = "form-control", Id = "ddlPrioridad" })
                @Html.ValidationMessageFor(model => model.Prioridad, "", new { @class = "text-danger" })
            }
            else
            {
                @Html.DisplayFor(model => model.NombrePrioridad)
            }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Estado, "EstadoId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => Model.Estado, Model.EstadosDDL, new { @class = "form-control", Id = "ddlEstado" })
            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Styles {
    @Styles.Render("~/content/datepicker")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datepicker")
    <script>
        @if (usuarioLogueado.Id == Model.UsuarioAltaId)
        {
            <text>
                $("#dpVencimiento").datepicker({
                    format: "dd/mm/yyyy",
                    language: "es",
                    autoclose: true
                }).on("changeDate", function (e) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("ActualizarVencimiento", "Tareas")',
                        data: JSON.stringify({
                            IdTarea: @Model.Id,
                            Fecha: e.date
                        }),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function () {
                            //Informar OK
                        },
                        error: function () {
                            //Informar error y limpiar el campo
                        }
                    });
                });

                $("#ddlPrioridad").on("change", function () {
                    alert("Cambiando prioridad");
                });
            </text>
        }

        $("#ddlEstado").on("change", function () {
            alert("Cambiando estado");
        });

        $("#btnAsignar").on("click", function () {
            alert("Mostrar modal con la lista de usuarios");
        });
    </script>
}
